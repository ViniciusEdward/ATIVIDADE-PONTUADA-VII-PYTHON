import os

# Função sem retorno.
def logoSenai():
    os.system("cls || clear")
    print("=== SENAI === ")

def imc_calculo(n1, n2):
    return n1 / (n2 * n2)

def imc_consquencias(imc):
    if imc < 18.5: 
        return "Abaixo do peso" 
    elif imc >= 18.5 and imc < 25:
        return "Peso normal"
    elif imc >= 25 and imc < 30:
        return "Sobrepeso"
    elif imc >= 30 and imc < 35: 
        return "Obesidade grau I"
    elif imc >= 35 and imc < 40:
        return "Obesidade grau II" 
    elif imc >= 40:
        return "Obesidade grau III (mórbida)"

def perguntas():
    idade = int(input("Digite a idade do usuário: "))
    altura = float(input("Digite a altura do usuário (em metros): "))
    peso = float(input("Digite o peso do usuário (em quilogramas): "))
    return idade, altura, peso

# Definindo listas vazias para armazenar os dados dos usuários
nomes = []
sobrenomes = []
idades = []
alturas = []
pesos = []

# Solicitando os dados dos usuários em um loop
while True:
    logoSenai()
    nome = input("Digite o nome do usuário (ou digite 'sair' para encerrar): ")
    if nome.lower() == 'sair':
        break
    sobrenome = input("Digite o seu sobrenome: ")
    idade, altura, peso = perguntas()

    # Verificando se o usuário quer sair
    
    nomes.append(nome)
    sobrenomes.append(sobrenome)
    idades.append(idade)
    alturas.append(altura)
    pesos.append(peso)
    imc = imc_calculo(peso, altura)
    imc_conse = imc_consquencias(imc)
    # Adicionando os dados às listas

# Exibindo os dados armazenados
logoSenai()
print("\nDados dos usuários:")
for i in range(len(nomes)):
    print(f"Usuário {i+1}:")
    print("Nome:", nomes[i], sobrenomes[i])
    print("Idade:", idades[i])
    print("Altura:", alturas[i], "metros")
    print("Peso:", pesos[i], "quilogramas")
    print(f"Imc: {imc:.2f} - {imc_consquencias(imc)}")
    print()
